extends  ../_skeleton

block variables
	- var activeIndex = 5

block title
	title Contacts

block page
	include ../mixins/_breadcrumb

	// Page Header
	include ../sections/_header-default

	// Page Content
	main.page-content
		+breadcrumbs('images/breadcrumbs-04.jpg', 'Contacts', 'Contact or Visit Us',
		{
			0: {
				"title": "Home",
				"href": "./"
			},
			1: {
				"title": "Contacts"
			}
		}
		)
		section
			.shell


		section.section-top-80.section-md-top-0
			.shell.shell-wide.text-md-left
				.range
					.cell-md-7.cell-lg-5.section-md-80.section-lg-120
						h2.text-ubold Get in Touch
						hr.divider.divider-md-left.divider-gray-dark.divider-80
						p.offset-top-20.offset-md-top-40 You can contact us any way that is convenient for you. We are available 24/7 via fax or email. You can also use a quick contact form below or visit our office personally. We would be happy to answer your questions.
						// RD Mailform
						form.offset-top-30.range.rd-mailform.text-left(data-form-output="form-output-global", data-form-type='contact', method='post', action='bat/rd-mailform.php')
							.cell-sm-6
								.form-group
									label.form-label.form-label-outside(for="contact-name") First name
									input#contact-name.form-control.form-control-gray(type="text" name="name" data-constraints="@Required")
							.cell-sm-6.offset-top-20.offset-sm-top-0
								.form-group
									label.form-label.form-label-outside(for="contact-surname") Last name
									input#contact-surname.form-control.form-control-gray(type="text" name="surname" data-constraints="@Required")
							.cell-sm-6.offset-top-20
								.form-group
									label.form-label.form-label-outside(for="contact-email") E-mail
									input#contact-email.form-control.form-control-gray(type="email" name="email" data-constraints="@Required @Email")
							.cell-sm-6.offset-top-20
								.form-group
									label.form-label.form-label-outside(for="contact-phone") Phone
									input#contact-phone.form-control.form-control-gray(type="text" name="phone" data-constraints="@Required @Integer")
							.cell-md-12.offset-top-20
								.form-group
									label.form-label.form-label-outside(for="contact-message") Message
									textarea#contact-message.form-control.form-control-gray(name="message" data-constraints="@Required")
								.offset-top-20.text-center.text-md-left
									button(style='min-width: 140px;' type="submit").btn.btn-primary.btn-sm.btn-naira.btn-naira-up
										span.icon.fa-envelope-o
										span Send

					.cell-xl-2.cell-lg-3.cell-md-4.cell-xl-preffix-1.section-md-80.section-lg-120
						.range.text-left
							.cell-md-12.cell-xs-6
								h5.text-bold.hr-title Phones
								.media
									.media-left
										span.icon.icon-sm.text-info-dr.mdi.mdi-phone
									.media-body
										div
											a(href='callto:#').text-gray 1-800-1234-567,
										div
											a(href='callto:#').text-gray 1-800-9876-543
							.cell-md-12.cell-xs-6.offset-top-40.offset-xs-top-0.offset-md-top-60
								h5.text-bold.hr-title E-mail
								.media
									.media-left
										span.icon.icon-sm.text-info-dr.mdi.mdi-email-outline
									.media-body
										div
											a(href='mailto:#').text-gray info@demolink.org
							.cell-md-12.cell-xs-6.offset-top-40.offset-md-top-60
								h5.text-bold.hr-title Address
								.media
									.media-left
										span.icon.icon-sm.text-info-dr.mdi.mdi-map-marker
									.media-body
										div
											a(href='#').text-gray 2130 Fulton Street, San Diego, CA 94117-1080 USA
							.cell-md-12.cell-xs-6.offset-top-40.offset-md-top-60
								h5.text-bold.hr-title Opening Hours
								.media
									.media-left
										span.icon.icon-sm.text-info-dr.mdi.mdi-calendar-clock
									.media-body
										div Mon–Fri 8:00am–6:00pm
											br
											| Sat 10:00am–4:00pm
											br
											| Sun Closed
							.cell-md-12.offset-top-40.offset-md-top-60
								h5.text-bold.hr-title Socials

								ul.list-inline.offset-top-24
									li
										a(href='#').icon.text-gray.icon-xxs.fa-facebook
									li
										a(href='#').icon.text-gray.icon-xxs.fa-twitter
									li
										a(href='#').icon.text-gray.icon-xxs.fa-pinterest-p
									li
										a(href='#').icon.text-gray.icon-xxs.fa-vimeo
									li
										a(href='#').icon.text-gray.icon-xxs.fa-google-plus
									li
										a(href='#').icon.text-gray.icon-xxs.fa-rss

					.cell-lg-3.cell-lg-preffix-1.rd-google-map-abs.offset-top-40.offset-md-top-0
						// RD Google Map
						.rd-google-map(class="rd-google-map__model", data-zoom='12', data-x='-73.9874068', data-y='40.643180')
							ul.map_locations
								li(data-y='40.643180', data-x='-73.9874068')
									p
										| 9870 St Vincent Place, Glasgow, DC 45 Fr 45.

	// Page Footer
	include ../sections/_footer-default



